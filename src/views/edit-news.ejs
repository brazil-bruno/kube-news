<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <title>New Post</title>

  <%- include('./partial/bootstrap-css'); %>

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }

      .container {
        max-width: 960px;
      }
    </style>
</head>

<body class="bg-light">

  <%- include('./partial/nav-bar'); %>

    <div class="container">
      <main>
        <div class="py-2 text-center">
          <h2>New Post</h2>
        </div>

        <div class="row g-5">
          <div class="col-md-12 col-lg-12">
            <h4 class="mb-3"></h4>
            <form class="needs-validation" action="/post" method="post" novalidate>
              <div class="row g-3">
                <div class="col-12">
                  <label for="title" class="form-label">Title: <span class="text-muted"></span></label>
                  <input type="text" class="form-control" id="title" name="title" placeholder="news title"
                    pattern=".{1,30}"
                    required>
                  <div class="invalid-feedback">
                    This field is mandatory and must be a maximum of 30 characters
                  </div>
                </div>
                <div class="col-12">
                  <label for="resumo" class="form-label">Summary: <span class="text-muted"></span></label>
                  <input type="text" class="form-control" id="resumo" name="resumo" placeholder="news summary"
                    pattern=".{1,100}"
                    required>
                  <div class="invalid-feedback">
                    This field is mandatory and must be a maximum of 50 characters
                  </div>
                </div>
                <div class="col-12">
                  <label for="address" class="form-label">News:</label>
                  <textarea class="form-control" id="address" name="description" rows="20" required></textarea>
                  <div class="invalid-feedback">
                    This field is mandatory
                  </div>
                </div>
              </div>
              <br />
              <button class="w-100 btn btn-primary btn-lg btn-dark" type="submit">Save</button>
            </form>
          </div>
        </div>
      </main>
    </div>

    <%- include('./partial/bootstrap-js'); %>
    <script src="/assets/dist/js/form-validation.js"></script>
</body>

</html>